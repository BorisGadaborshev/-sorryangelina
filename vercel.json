{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/server/src/server.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server/src/server.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ]
} 