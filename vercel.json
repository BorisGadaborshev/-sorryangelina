{
  "version": 2,
  "builds": [
    {
      "src": "index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "outputDirectory": "client/build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/index.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/index.ts"
    },
    {
      "source": "/static/(.*)",
      "destination": "/client/build/static/$1"
    },
    {
      "source": "/manifest.json",
      "destination": "/client/build/manifest.json"
    },
    {
      "source": "/favicon.ico",
      "destination": "/client/build/favicon.ico"
    },
    {
      "source": "/(.*).png",
      "destination": "/client/build/$1.png"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 