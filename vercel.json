{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/src/server.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/server/src/server.ts"
    }
  ]
} 